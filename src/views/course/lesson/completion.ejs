<%- include('../../partials/head', { cssFile: 'small-business.css' }) %>
<%- include(`../../partials/navigation/${loggedUser.role === 'teacher' ? 'teacher' : 'admin'}`) %>

<!-- <tr class="bg-warning text-white"> -->

    <!-- Page Content -->
    <div class="container">
      <!-- Content Row -->
      <div class="row my-5">
        <div class="col-md-12">
          <div class="card rounded-0">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <h3 class="card-title">Completed - <%= lesson.title %></h3>
              </div>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Role</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let user of completedStudents) { %>
                    <tr>
                      <th scope="row"><%= user.id %></th>
                      <td><%= user.firstname %></td>
                      <td><%= user.lastname %></td>
                      <td><%= user.role %></td>
                      <td>
                        <a href="/course/<%= course.id %>/lesson/<%= lesson.id %>/student-completion/users/<%= user.id %>/not-completed" data-toggle="tooltip" data-placement="top" title="Not completed" class="btn btn-sm btn-outline-secondary mr-2"><i class="fas fa-ban"></i></a>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Content Row -->
      <div class="row mb-5">
        <div class="col-md-12">
          <div class="card rounded-0">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <h3 class="card-title">Not completed - <%= lesson.title %></h3>
              </div>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Role</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let user of notCompletedStudents) { %>
                    <tr>
                      <th scope="row"><%= user.id %></th>
                      <td><%= user.firstname %></td>
                      <td><%= user.lastname %></td>
                      <td><%= user.role %></td>
                      <td>
                        <a href="/course/<%= course.id %>/lesson/<%= lesson.id %>/student-completion/users/<%= user.id %>/completed" data-toggle="tooltip" data-placement="top" title="Completed" class="btn btn-sm btn-outline-secondary mr-2"><i class="fas fa-check"></i></a>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
    <!-- /.container -->

<%- include('../../partials/footer_tooltips') %> 