<!--
INCLUDE THIS WITH THESE LOCALS:

id, title, body, button, url
-->

<div class="modal fade" id="<%= id %>" tabindex="-1" role="dialog" aria-labelledby="<%= title.split(' ').join('-') + '-title' %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="<%= title.split(' ').join('') + '-title' %>"><strong><%= title %></strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-dark">
        <%= body %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="location.href='<%= url %>';"><%= button %></button>
      </div>
    </div>
  </div>
</div>