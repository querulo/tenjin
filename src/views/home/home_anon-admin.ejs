<%- include('../partials/head', { cssFile: 'small-business.css' }) %>
<% if (locals.loggedUser) { %>
  <%- include(`../partials/navigation/admin-home`) %>
<% } else { %>
  <%- include(`../partials/navigation/anon`) %>
<% } %>

  <!-- Page Content -->
  <div class="container">

    <!-- Heading Row -->
    <div class="row align-items-center my-5">
      <div class="col-lg-7">
        <img class="img-fluid rounded mb-4 mb-lg-0" src="<%= xss.doubleQ( school.topBlock.image ) %>" alt="">
      </div>
      <!-- /.col-lg-8 -->
      <div class="col-lg-5">
        <h1 class="font-weight-light"><%= xss.html( school.topBlock.name ) %></h1>
        <h3><%= xss.html( school.topBlock.title ) %></h3>
        <p>
          <%= xss.html( school.topBlock.short ) %>
        </p>
        <a class="btn btn-primary" href="/signin">Join now!</a>
      </div>
      <!-- /.col-md-4 -->
    </div>
    <!-- /.row -->

    <!-- Call to Action Well -->
    <div class="card text-white bg-secondary my-5 py-2 text-center">
      <div class="card-body">
        <h3 class="text-white m-0 mb-1"><%= xss.html( school.callOut.title ) %></h3>
        <h5 class="text-white m-0">
          <%= xss.html( school.callOut.short ) %>
        </h5>
        <p class="mt-2 mb-0">
          <a class="btn btn-primary" href="/signup">Join Now!</a>
        </p>
      </div>
    </div>

    <!-- Content Row -->
    <div id="courseCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% for (let i = 0; i < courses.length; i++) { %>
          <div class="carousel-item <% if (i === 0) { %>active<% } %>">
            <div class="row">
              <% for (let course of courses[i]) { %>
                <div class="col-md-4 mb-5">
                  <div class="card h-100">
                    <img class="card-img-top" src="<%= xss.doubleQ( course.image ) %>">
                    <div class="card-body">
                      <h2 class="card-title"><%= xss.html( course.title ) %></h2>
                      <% if (course.selfenrollment) { %>
                        <p class= "text-success mb-3">FREE</p>
                      <% } %>
                      <p class="card-text"><%= xss.html( course.short ) %></p>
                    </div>
                    <div class="card-footer">
                      <a href="/course/<%= xss.doubleQ (course.id ) %>" class="btn btn-block btn-primary btn-sm">
                        Learn more<i class="fas fa-arrow-right mt-1 ml-2"></i>
                      </a>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#courseCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#courseCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  </div>
  <!-- /.container -->

<%- include('../partials/footer') %> 